    <!--</LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:orientation="vertical">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="First Name(प्रथम नाम)"
              android:textColor="@color/colorPrimaryDark"
              android:textSize="18sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="First Name(प्रथम नाम)"
                android:textSize="16sp"
                android:textStyle="italic"
                android:maxLength="30"
                android:id="@+id/fname"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Last Name(उपनाम)"
                android:textSize="18sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name(उपनाम)"
                android:layout_marginTop="5sp"
                android:textSize="16sp"
                android:textStyle="italic"
                 android:maxLength="30"
                android:id="@+id/lname"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="0.5"
                android:text="Mobile No.(मोबाइल नं):"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="0.5"
                android:textColor="#000"
                android:textSize="18sp"
                android:id="@+id/mobileNo" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Photo ID (Optional)"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:layout_gravity="left"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:gravity="center">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Take Id's Photo"
                android:textSize="14sp"
                android:onClick="IdPhoto"
                android:background="@drawable/edittext"
                android:id="@+id/idPhoto"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="12sp"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD VISITOR( ऐड विजिटर )"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:background="@drawable/btn_admin"
                android:textColor="#ffffff"
                android:padding="15sp"
                android:id="@+id/button"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="addVisitor"/>
        </LinearLayout>
        <include layout="@layout/footer"/>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
